<h1>Create a new song: </h1>

<%= form_for @song do |f| %>
  <label>Song name: </label><br>
  <%= f.text_field :name %><br>
  <br>

  <label>Artist ID: </label><br>
  <%= f.text_field :artist_id %><br>
  <br>

  <label>Genre ID: </label><br>
  <%= f.text_field :genre_id %><br>
  <br>

  <%= f.submit "Create Song" %>
<% end %>