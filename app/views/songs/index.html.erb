<h1>All songs</h1>

<h3><%= link_to "Create new song", new_song_path %></h3>

<% @songs.each do |song| %>
  <p>Name: <%= link_to song.name, song_path(song) %></p>
  <p>Artist: <%= song.artist.name %></p>
  <p>Genre: <%= song.genre.name %></p><br>
  <br>
<% end %>

<h3><%= link_to "See all artists", artists_path %></h3>
<h3><%= link_to "See all genres", genres_path %></h3>